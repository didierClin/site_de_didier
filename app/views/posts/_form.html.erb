<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@post.errors.count, "erreur") %> ont empeche l'enregistrement de ce post.</h2>
      <ul>
        <% @post.errors.full_messages.each do |mesg| %>
            <li><%= mesg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :titre  %>
    <%= f.text_field :title  %>
  </p>
  <p>
    <%= f.label :Message  %>
    <%= f.text_field :body  %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
