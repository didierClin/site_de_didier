<div class="comment.clearfix">
  <div class="comment_content">
    <p class="comment_name">
      <strong><%= comment.name %></strong>
    </p>
    <p class="comment_body"> <%= comment.body %> </p>
    <p class="comment_time"> Il y a <%= time_ago_in_words(comment.created_at) %> </p>
  </div>

  <% if !user_signed_in?  %>
  <p>
    <%= link_to 'Supprimer', [comment.post, comment],
     method: :delete, class: "button",
    data: { confirm: "Valider la suppression?" }  %>
  </p>
  <% end %>
</div>
