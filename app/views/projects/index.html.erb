<h1> Index des projets  (<%= Project.count %>) </h1>



<% @projects.in_groups_of(3, false).each do |group| %>
  <div class="row">
    <% group.each do |project| %>
      <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
              <%= image_tag project.image.url(:thumb), alt: project.title %>
              <div class="caption">
                <h2 class="center"> <%= project.title %></h2>
                <p> <%= truncate(project.description, length: 80) %> </p>
                <p><%= link_to  icon('link', class: "fa-2x"),   projects_path(project.slug), class: "btn btn-primary", role: "button" %>
                   <a href="<%= project.link %>" title: "mon titre"> <%= icon('github', class: "fa-2x btn btn-primary", role: "button" ) %>  </a></p>
              </div>
          </div>
      </div>
      <% end  %>
  </div>
<% end  %>
