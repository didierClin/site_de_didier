<h1>Todo App</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-1">
    <h2>Taches</h2>
  </div>

  <div class="col-md-2 col-md-offset-1">
    <%= link_to new_task_path, remote: true do %>
      <button class="btn btn-default">Nouvelle tache</button>
    <% end %>
  </div>
</div>

<!-- Place for FORM display -->
<div class="row">
  <div class="col-md-6 col-md-offset-2" id="task-form" style="display:none;"></div>
</div>

<!-- List of tasks -->
<div class="row">
  <div class="col-md-8 col-md-offset-1" id="tasks"><%= render @tasks %></div>
</div>
