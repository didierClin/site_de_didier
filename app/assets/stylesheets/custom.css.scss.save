/* universal */

/* Added Backgroung image */
body {
  padding-top: 0;
  background-image: url(/images/fond-eiffel.jpg);
  background-position: center;
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-size: cover;
}

 /* Header bar*/
#header{
  height: 40px;
  // width: 100%;
  background-color: rgba(190, 179, 105, 0.38);
  // margin-left: -20px;

}

#msgAcc {

}

/* make sidebar nav vertical */
.sidebar-nav { width: 15%; }

.navbar-brand{
      color: #684020;
      font-weight: bold;
      &:hover{ color: white;}
}
// position of left footer
#bas {
      position: fixed;
      bottom: 0;
      left: 0;
      width: auto;
      z-index: 5;
      // border: 3px solid #73AD21;
}

a {
  color: #684020;
}
// font-awesome social link
.fa-stack {
   margin: -2px 0;
   font-size:0.75em;
   &:hover { color: white;}
 }
// Add some margin for row under 1008px
.row {
  margin-left: 0.5%;
  margin-right: 0.5%;
}
@media (min-width: 1008px) {
  .icon-bar {
    color: #181818;
    font-family: 'Cinzel', serif;
  }
  .sidebar-nav{
       position: fixed;
       left: 0;
       top: 0;
       height: 100%;
       background: #687072;
      //  background: rgb(70, 227, 166);

       border-right: 2px solid #d6dce0;
  }
  .sidebar-nav .navbar .navbar-collapse {
    padding: 0;
    max-height: none;
  }
  .sidebar-nav .navbar ul {
    float: none;
    // Separe head from first nav item
    padding-top: 80px;
  }
  .sidebar-nav .navbar ul:not {
    display: block;
  }
  .sidebar-nav .navbar li {
    float: none;
    display: block;
     font-weight: 700;
     font-size: 0.8em;
  }
  .sidebar-nav .navbar li a {
    padding-top: 12px;
    padding-bottom: 12px;
    color: #D5B572;
    &:hover {
      color: #322c2c;
    }
  }
  // release margin for row
  .row {
    margin-left: -15px;
    margin-right: -15px;
  }
}



